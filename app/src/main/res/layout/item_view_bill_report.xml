<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_sale_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:maxLines="1"
                android:text="1234ABCD12"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_sale_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="end"
                android:maxLines="1"
                android:text="20/05/2018"
                android:textColor="@color/lightGray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:maxLines="1"
                android:text="Bàn"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="end"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:maxLines="1"
                android:text="Giảm giá"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="end"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:maxLines="1"
                android:text="VAT"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_vat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="end"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:maxLines="1"
                android:text="Phí dịch vụ"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_service_charge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="end"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:maxLines="1"
                android:text="Thành tiền"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_sub_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="end"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_underline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/spacing_normal"
        android:background="@color/brightGray" />

</LinearLayout>

