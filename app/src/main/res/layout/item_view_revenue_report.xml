<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_small">

        <TextView
            android:id="@+id/txt_sale_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/sf_regular"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="15sp"
            tools:text="20/06/2016" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_shift_1_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textSize="15sp"
                tools:text="1 - 3" />

            <TextView
                android:id="@+id/txt_shift_1_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textSize="15sp"
                tools:text="10.000.000đ" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_shift_2_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textSize="15sp"
                tools:text="1 - 3" />

            <TextView
                android:id="@+id/txt_shift_2_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sf_regular"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textSize="15sp"
                tools:text="10.000.000đ" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view_underline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/spacing_normal"
        android:background="@color/brightGray" />

</LinearLayout>