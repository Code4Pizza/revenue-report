<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_app_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/sf_semibold"
        android:gravity="center"
        android:text="@string/filter_time_dialog_title"
        android:textColor="@color/mediumBlack"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/sf_regular"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingBottom="12dp"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/sf_regular"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingBottom="12dp"
        android:text="@string/filter_time_dialog_today"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_yesterday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/sf_regular"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingBottom="12dp"
        android:text="@string/filter_time_dialog_yesterday"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/sf_regular"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingBottom="12dp"
        android:text="@string/filter_time_dialog_week"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/sf_regular"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingBottom="12dp"
        android:text="@string/filter_time_dialog_month"
        android:textSize="15sp" />

</LinearLayout>